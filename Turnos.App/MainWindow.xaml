<Window x:Class="Turnos.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Turnos - Dashboard"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignBackground}"
        TextElement.FontSize="14">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <materialDesign:Card Grid.Row="0"
                             Padding="0">
            <Border Padding="20,16"
                    CornerRadius="12"
                    Background="{DynamicResource MaterialDesignPaper}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Turnos" FontSize="22" FontWeight="SemiBold"/>
                        <TextBlock Text="Entradas y Salidas" FontSize="12" Opacity="0.7"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ComboBox x:Name="cmbLugar" Width="140" Margin="0,0,12,0"
                                  Style="{DynamicResource MaterialDesignFilledComboBox}"
                                  materialDesign:HintAssist.Hint="Lugar"/>

                        <DatePicker x:Name="dpFechaInicio" Width="170" Margin="0,0,12,0"
                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                    materialDesign:HintAssist.Hint="Fecha inicio"/>

                        <DatePicker x:Name="dpFechaFin" Width="170" Margin="0,0,12,0"
                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                    materialDesign:HintAssist.Hint="Fecha fin"/>

                        <Button x:Name="btnCargar" Content="Cargar" Width="120" Height="40"
                                Margin="0,0,12,0"
                                Click="BtnCargar_Click"
                                Style="{DynamicResource MaterialDesignRaisedButton}"/>

                        <TextBlock x:Name="txtEstado" Text="Listo"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </materialDesign:Card>

        <!-- CONTENIDO -->
        <materialDesign:Card Grid.Row="2"
                             Padding="0">
            <Border CornerRadius="12"
                    Background="{DynamicResource MaterialDesignPaper}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ProgressBar x:Name="progressBar"
                                 Grid.Row="0"
                                 Height="4"
                                 IsIndeterminate="True"
                                 Visibility="Collapsed"
                                 Style="{DynamicResource MaterialDesignLinearProgressBar}"/>

                    <TabControl Grid.Row="1"
                                Style="{DynamicResource MaterialDesignFilledTabControl}"
                                Padding="8">

                        <!-- 1. Entradas Parking -->
                        <TabItem Header="Entradas Parking">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="dgvEntradasParking"
                                          ItemsSource="{Binding EntradasParking}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          Style="{DynamicResource MaterialDesignDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="No. Contrato" Binding="{Binding Col1}" Width="*"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding Col2}" Width="*"/>
                                        <DataGridTextColumn Header="Hora" Binding="{Binding Col3}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <TextBlock x:Name="txtContadorEntradasParking"
                                           Grid.Row="1"
                                           Text="Total: 0"
                                           HorizontalAlignment="Right"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </TabItem>

                        <!-- 2. Entradas Rent a Car -->
                        <TabItem Header="Entradas Rent a Car">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="dgvEntradasRentACar"
                                          ItemsSource="{Binding EntradasRentACar}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          Style="{DynamicResource MaterialDesignDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Sucursal" Binding="{Binding Col1}" Width="*"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding Col2}" Width="*"/>
                                        <DataGridTextColumn Header="Hora" Binding="{Binding Col3}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <TextBlock x:Name="txtContadorEntradasRentACar"
                                           Grid.Row="1"
                                           Text="Total: 0"
                                           HorizontalAlignment="Right"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </TabItem>

                        <!-- 3. Entradas Reserva Parking -->
                        <TabItem Header="Entradas Reserva Parking">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="dgvEntradasReservaParking"
                                          ItemsSource="{Binding EntradasReservaParking}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          Style="{DynamicResource MaterialDesignDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Reserva" Binding="{Binding Col1}" Width="*"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding Col2}" Width="*"/>
                                        <DataGridTextColumn Header="Hora" Binding="{Binding Col3}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <TextBlock x:Name="txtContadorEntradasReservaParking"
                                           Grid.Row="1"
                                           Text="Total: 0"
                                           HorizontalAlignment="Right"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </TabItem>

                        <!-- 4. Entrada Reserva Rent a Car -->
                        <TabItem Header="Entrada Reserva Rent a Car">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="dgvEntradaReservaRentACar"
                                          ItemsSource="{Binding EntradaReservaRentACar}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          Style="{DynamicResource MaterialDesignDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Reserva" Binding="{Binding Col1}" Width="*"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding Col2}" Width="*"/>
                                        <DataGridTextColumn Header="Hora" Binding="{Binding Col3}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <TextBlock x:Name="txtContadorEntradaReservaRentACar"
                                           Grid.Row="1"
                                           Text="Total: 0"
                                           HorizontalAlignment="Right"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </TabItem>

                        <!-- 5. Salidas Parking -->
                        <TabItem Header="Salidas Parking">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="dgvSalidasParking"
                                          ItemsSource="{Binding SalidasParking}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          Style="{DynamicResource MaterialDesignDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Contrato" Binding="{Binding Col1}" Width="*"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding Col2}" Width="*"/>
                                        <DataGridTextColumn Header="Hora" Binding="{Binding Col3}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <TextBlock x:Name="txtContadorSalidasParking"
                                           Grid.Row="1"
                                           Text="Total: 0"
                                           HorizontalAlignment="Right"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </TabItem>

                        <!-- 6. Salidas Rent a Car -->
                        <TabItem Header="Salidas Rent a Car">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="dgvSalidasRentACar"
                                          ItemsSource="{Binding SalidasRentACar}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          Style="{DynamicResource MaterialDesignDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Reserva" Binding="{Binding Col1}" Width="*"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding Col2}" Width="*"/>
                                        <DataGridTextColumn Header="Hora" Binding="{Binding Col3}" Width="*"/>
                                        <DataGridTextColumn Header="FL" Binding="{Binding Col4}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <TextBlock x:Name="txtContadorSalidasRentACar"
                                           Grid.Row="1"
                                           Text="Total: 0"
                                           HorizontalAlignment="Right"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </TabItem>

                        <!-- 7. Salida Reserva Parking -->
                        <TabItem Header="Salida Reserva Parking">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="dgvSalidaReservaParking"
                                          ItemsSource="{Binding SalidaReservaParking}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          Style="{DynamicResource MaterialDesignDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Reserva" Binding="{Binding Col1}" Width="*"/>
                                        <DataGridTextColumn Header="Fecha" Binding="{Binding Col2}" Width="*"/>
                                        <DataGridTextColumn Header="Hora" Binding="{Binding Col3}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <TextBlock x:Name="txtContadorSalidaReservaParking"
                                           Grid.Row="1"
                                           Text="Total: 0"
                                           HorizontalAlignment="Right"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </Grid>
            </Border>
        </materialDesign:Card>

    </Grid>
</Window>
